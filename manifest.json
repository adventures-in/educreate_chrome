
{
    "name": "Getting Started Example",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": ["contextMenus", "activeTab", "declarativeContent", "storage"],
    "options_page": "options.html",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/free_pixel_art16.png",
            "32": "images/free_pixel_art32.png",
            "48": "images/free_pixel_art48.png",
            "128": "images/free_pixel_art128.png"
        }
    },
    "icons": {
        "16": "images/free_pixel_art16.png",
        "32": "images/free_pixel_art32.png",
        "48": "images/free_pixel_art48.png",
        "128": "images/free_pixel_art128.png"
    },
    "manifest_version": 2
}

